<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="text-center">URL Shortener</h1>
        <form action="/removeall" method="POST">
            <button class="btn btn-danger ml-4" type="submit" >Remove All</button>
        </form>
        <form action="/shorturls" method="POST" class="d-flex flex-row align-items-center flex-wrap my-4">
            <label for="fullUrl" class="visually-hidden">Url</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" >@</span>
                    <input placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control md-3">
                    <button class="btn btn-success ml-4" type="submit" >Shorten</button>
                </div>
        </form>
        
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                </tr>
            </thead>
            <tbody>
                <% shortURLs.forEach(shortURL => { %>
                <tr>
                    <td><a class="link-underline link-underline-opacity-0" href="<%= shortURL.full %>"><%= shortURL.full %></a></td>
                    <td><a class="link-underline link-underline-opacity-0" href="<%= shortURL.short  %>"><%= shortURL.short %></a></td>
                </tr>
                <% }); %>

            </tbody>
        </table>
    </div>
    <%- include('partials/footer') %>
</body>
</html>